        <div class="m-auto">
            <img src="{{ asset('images/atomic.jpg') }}" alt="" class="max-w-52">
        </div>
        <div class="m-auto">
            <img src="{{ asset('images/leki.png') }}" alt="" class="max-w-52">
        </div>

        </div>
    </div>
    <h2 class="font-heading text-3xl !mt-24">Matériel</h2>
    <div class="grid grid-cols-1 items-center gap-24 justify-center md:grid-cols-3">
        <div class="flex justify-center">
            <img src="{{ asset('images/atomic.jpg') }}" alt="" class="w-2/5 md:w-full">
        </div>
        <div class="flex justify-center">
            <img src="{{ asset('images/sponsors/vola.webp') }}" alt="" class="w-2/5 md:w-full">
        </div>
        <div class="flex justify-center">
            <img src="{{ asset('images/leki.png') }}" alt="" class="w-2/5 md:w-full">
        </div>
    </div>
{% endblock %}
